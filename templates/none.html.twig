    <!-- Fontfaces CSS-->
    <link href="{{ asset('dash/css/font-face.css') }}" rel="stylesheet" media="all">
    <link href="{{ asset('dash/vendor/font-awesome-4.7/css/font-awesome.min.css') }}" rel="stylesheet" media="all">
