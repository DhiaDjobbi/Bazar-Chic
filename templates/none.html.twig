    <link href="{{ asset('dash/css/theme.css') }}" rel="stylesheet" media="all">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}        
    <style>
            /* Navbar */
            .site-logo a {
            text-transform: uppercase;
            letter-spacing: .2em;
            font-size: 20px;
            padding-left: 10px;
            padding-right: 10px;
            border: 2px solid #25262a;
            color: #000 !important; }
            .site-logo a:hover {
                text-decoration: none; }
    </style>


<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                            <div class="site-logo">
                                <a href="" class="js-logo-clone">bazar-chic</a>
                            </div>                        
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </header>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <div class="logo">
                    <div class="site-logo">
                        <a href="" class="js-logo-clone">bazar-chic</a>
                    </div>                
            </div>
            <div class="menu-sidebar__content js-scrollbar1">
                <nav class="navbar-sidebar">
                    <ul class="list-unstyled navbar__list">
                        <li class="active has-sub">
                            <a class="js-arrow" href="#">
                                <i class="fas fa-tachometer-alt"></i>Dashboard</a>
                        </li>
                        {% if  is_granted('ROLE_ADMIN') %}
                            <li>                            
                                <a href="{{path("user_index")}}">
                                    <i class="fas fa-users "></i>Users</a>
                            </li>
                        {% endif %}
                        {% if  is_granted('ROLE_ADMIN') %}
                            <li>
                                <a href="{{path("product_index")}}">
                                    <i class="fa fa-shopping-cart"></i>All Products</a>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{path("product_index")}}">
                                    <i class="fas fa-table"></i>My Products</a>
                            </li>                        
                        {% endif %}

                        {% if  is_granted('ROLE_ADMIN') %}
                            <li>
                                <a href="{{path("marketplace_index")}}">
                                    <i class="fas fa-map-marker-alt"></i>All Marketplaces</a>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{path("marketplace_index")}}">
                                    <i class="fas fa-map-marker-alt"></i>My Marketplaces</a>
                            </li>                        
                        {% endif %}


                        {% if  is_granted('ROLE_ADMIN') %}

                        <li>
                            <a href="{{path("category_index")}}">
                                <i class="far fa fa-bars"></i>Categories</a>
                        </li>
                        {% endif %}

                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->

      
			  <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap">
                        
                    {{ render(controller('App\\Controller\\SearchController::SearchAction')) }}

                            <div class="header-button">				                 
                                <div class="account-wrap">
                                    <div class="account-item clearfix js-item-menu">
                                        <div class="image">
                                            <img src="{{ asset('uploads/' ~ app.user.Picture ~ '') }}" alt="User Picture" />
                                        </div>
                                        <div class="content">
                                            <a class="js-acc-btn" href="#">{{app.user.name}}</a>
                                        </div>
                                        <div class="account-dropdown js-dropdown">
                                            <div class="info clearfix">
                                                <div class="image">
                                                    <a href="#">
                                                        <img src="{{ asset('uploads/' ~ app.user.Picture ~ '') }}" alt="User Picture" />
                                                    </a>
                                                </div>
                                                <div class="content">
                                                    <h5 class="name">
                                                        <a href="#">{{app.user.name}}</a>
                                                    </h5>
                                                    <span class="email">{{app.user.email}}</span>
                                                </div>
                                            </div>
                                            <div class="account-dropdown__body">
                                                <div class="account-dropdown__item">
                                                    <a href="{{ path('user_show', {'id': app.user.id}) }}">
                                                        <i class="zmdi zmdi-account"></i>Account</a>
                                                </div>
                                                <div class="account-dropdown__item">
                                                    <a href="{{ path('user_edit', {'id': app.user.id}) }}">
                                                        <i class="zmdi zmdi-settings"></i>Setting</a>
                                                </div>
                                            </div>
                                            
                                            <div class="account-dropdown__footer">
                                                <a href="{{path("user_logout")}}">
                                                    <i class="zmdi zmdi-power"></i>Logout</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- HEADER DESKTOP-->
			
			
			
			
			
			
			
			
		
			
			
			
			        {% block body %}

			
			        {% endblock %}

			
			
			
            <!-- END PAGE CONTAINER-->
        </div>

    </div>

</body>

</html>
<!-- end document-->

        
        
