{% extends 'none.html.twig' %}
{% block title %}Product{% endblock %}
{% block body %}

<div class="main-content">
   <div class="section__content section__content--p30">
      <div class="container-fluid">
         <div class="row">
            <div class="col-lg-12">
               <div class="card">
                  <div class="card-header">
                     <strong>Show  a </strong> Product
                  </div>
                  <div class="card-body card-block">
                     <div class="site-section">
                        <div class="container">
                           <div class="row">
                              <div class="col-md-6">
                                 <div class="item-entry">
                                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                       <div class="carousel-inner">
                                          {% for img in product.getImages() %}
                                          {% if loop.first %}
                                          <div style="max-height: 350px; max-width: 450px;" class="carousel-item active">
                                             <img class="d-block w-100" src="{{ asset('product_img/' ~ img.getImg() ~ '') }}" alt="First slide">
                                          </div>
                                          {% else %}
                                          <div class="carousel-item">
                                             <img  style="max-height: 250px; max-width: 450px;" class="d-block w-100" src="{{ asset('product_img/' ~ img.getImg() ~ '') }}" alt="another slide">
                                          </div>
                                          {% endif %}
                                          {% endfor %}
                                       </div>
                                       <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                       <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                       <span class="sr-only">Previous</span>
                                       </a>
                                       <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                       <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                       <span class="sr-only">Next</span>
                                       </a>
                                    </div>
                                 </div>
                              </div>
                              <div class="col-md-6">
                                 <h2 class="text-black">{{ product.pname }}</h2>
                                 <p class="mb-4">{{ product.pdescription }}</p>
                                 <p><strong class="text-primary h4">{{ product.price }} TND</strong></p>
                                 <a style=" margin : 5px;" href="{{ path('product_edit', {'id': product.id}) }}" type="button" class="btn btn-secondary btn">
                                 <i style="margin-right: 8px;" class="fa fa-pencil-square-o"></i> Edit Product
                                 </a>
                                 <a style=" margin : 5px;" href="{{ path('product_index') }}" type="button" class="btn btn-warning btn">
                                 <i style="margin-right: 8px;" class="fa fa-arrow-left"></i>Back to list
                                 </a>
                                 {{ include('product/_delete_form.html.twig') }}
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
</div>
{% endblock %}

