{% extends 'none.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
  
<style>
    small{
        color: red;
    }
</style>

            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Add a new</strong> Admin
                                    </div>
                                    <div class="card-body card-block">
                             {{ form_start(form, {'attr': {'class': 'login100-form validate-form flex-sb flex-w',novalidate: 'novalidate'}}) }}
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-inpsut" class=" form-control-label">Full Name</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                 {{ form_widget(form.name, {'attr': {'class': 'form-control','type': 'text'} }) }}		
                                                    <small class="help-block form-text">{{ form_errors(form.name) }}</small>
                                                </div>
                                            </div>            

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-inpsut" class=" form-control-label">Username</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                 {{ form_widget(form.username, {'attr': {'class': 'form-control','type': 'text'} }) }}		
                                             <small class="help-block form-text">{{ form_errors(form.username) }}</small>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="email-input" class=" form-control-label">Email Input</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                 {{ form_widget(form.email, {'attr': {'class': 'form-control','type': 'text'} }) }}		
                                                    <small class="help-block form-text">{{ form_errors(form.email) }}</small>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="password-input" class=" form-control-label">Password</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                {{ form_widget(form.password, {'attr': {'class': 'form-control','type': 'Password'} }) }}		
                                                    <small class="help-block form-text">{{ form_errors(form.password) }}</small>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="password-input" class=" form-control-label">Confirm Password</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                {{ form_widget(form.password2, {'attr': {'class': 'form-control','type': 'Password'} }) }}		
                                                    <small class="help-block form-text">{{ form_errors(form.password2) }}</small>
                                                </div>
                                            </div>
        
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-input" class=" form-control-label">Upload a picture</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                {{ form_widget(form.picture, {'attr': {'class': 'form-control-file'} }) }}		
                                                </div>
                                            </div>
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="fa fa-dot-circle-o"></i> Submit
                                        </button>
                                       <a href="{{ path('user_index') }}"> <button type="reset" class="btn btn-danger btn-sm">
                                            <i class="fa fa-ban"></i> Reset
                                        </button></a>
                                    </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                                </div>
                            </div>
      
                        </div>
                    </div>
                </div>
            </div>
			
{% endblock %}
